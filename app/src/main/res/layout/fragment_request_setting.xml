<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Requester.Fragment.RequestSettingFragment">

    <TextView
        android:background="#222222"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="설정"
        android:gravity="center"
        android:textSize="50dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="50dp">

        <Button
            android:id="@+id/user_info_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="사용자 정보"
            android:textSize="30dp"
            android:layout_weight="1"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/call_enroll_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="연락처 등록"
            android:textSize="30dp"
            android:layout_weight="1"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/write_message_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="메시지 문구 작성"
            android:textSize="30dp"
            android:layout_weight="1"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/battery_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="배터리 잔량 설정"
            android:textSize="30dp"
            android:layout_weight="1"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/help_number_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="도움 요청 횟수 설정"
            android:textSize="30dp"
            android:layout_weight="1"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/logout_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="로그아웃"
            android:textSize="30dp"
            android:layout_weight="1"
            android:layout_margin="10dp"/>
    </LinearLayout>

</LinearLayout>