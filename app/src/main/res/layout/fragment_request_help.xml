<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context=".Requester.Fragment.RequestHelpFragment">

    <TextView
        android:background="@color/colorMainTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:text="도움 요청 횟수 설정"
        android:gravity="center"
        android:textSize="30dp"/>

    <RadioGroup
        android:id="@+id/radio_help_group"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_margin="50dp">

        <RadioButton
            android:checked="true"
            android:id="@+id/radio_help1"
            android:buttonTint="@color/colorButtonTint"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5회"
            android:textSize="25dp"/>

        <RadioButton
            android:id="@+id/radio_help2"
            android:buttonTint="@color/colorButtonTint"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4회"
            android:textSize="25dp"/>

        <RadioButton
            android:id="@+id/radio_help3"
            android:buttonTint="@color/colorButtonTint"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3회"
            android:textSize="25dp"/>

        <RadioButton
            android:id="@+id/radio_help4"
            android:buttonTint="@color/colorButtonTint"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2회"
            android:textSize="25dp"/>

        <RadioButton
            android:id="@+id/radio_help5"
            android:buttonTint="@color/colorButtonTint"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1회"
            android:textSize="25dp"/>

    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/help_commit"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="설정"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/help_cancel"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="취소"
            android:textSize="20dp"/>

    </LinearLayout>

</LinearLayout>