<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    tools:context=".Requester.Fragment.RequestBatteryFragment">

    <TextView
        android:background="@color/colorMainTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:text="배터리 잔량 설정"
        android:gravity="center"
        android:textSize="30dp"/>

    <RadioGroup
        android:id="@+id/radio_battery_group"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_margin="50dp">

        <RadioButton
            android:id="@+id/radio_battery30"
            android:buttonTint="@color/colorButtonTint"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30%"
            android:textSize="25dp"/>

        <RadioButton
            android:id="@+id/radio_battery25"
            android:buttonTint="@color/colorButtonTint"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25%"
            android:textSize="25dp"/>

        <RadioButton
            android:id="@+id/radio_battery20"
            android:buttonTint="@color/colorButtonTint"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20%"
            android:textSize="25dp"/>

        <RadioButton
            android:id="@+id/radio_battery15"
            android:buttonTint="@color/colorButtonTint"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15%"
            android:textSize="25dp"/>

        <RadioButton
            android:id="@+id/radio_battery10"
            android:buttonTint="@color/colorButtonTint"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10%"
            android:textSize="25dp"/>

        <RadioButton
            android:id="@+id/radio_battery5"
            android:buttonTint="@color/colorButtonTint"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5%"
            android:textSize="25dp"/>

    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/battery_commit"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="설정"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/battery_cancel"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="취소"
            android:textSize="20dp"/>

    </LinearLayout>

</LinearLayout>